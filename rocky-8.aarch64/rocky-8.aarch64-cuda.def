%files
    /etc/passwd /etc
    /etc/shadow /etc
    /etc/group /etc
    /etc/gshadow /etc

%post
    # Variables
    export KERNEL_VER=4.18.0-348.12.2
    export KERNEL_OS=el8_5
    export ARCH=aarch64

    # CUDA
    wget -O /etc/yum.repos.d/cuda-rhel8.repo https://developer.download.nvidia.com/compute/cuda/repos/rhel8/sbsa/cuda-rhel8.repo
    dnf -y --nobest update
    dnf -y install \
           cuda-drivers

    # Build CUDA Driver
    ln -s /usr/src/kernels/${KERNEL_VER}.${KERNEL_OS}.${ARCH}/arch/arm64 /usr/src/kernels/${KERNEL_VER}.${KERNEL_OS}.${ARCH}/arch/aarch64
    dkms autoinstall -k ${KERNEL_VER}.${KERNEL_OS}.${ARCH}
    rm -rf /var/lib/dkms/nvidia

%post
    # Yum
    dnf clean all
    rm -rf /var/lib/yum/yumdb/*

    # Misc
    rm -f /etc/passwd /etc/passwd- /etc/shadow /etc/shadow- /etc/group /etc/group- /etc/gshadow /etc/gshadow-
