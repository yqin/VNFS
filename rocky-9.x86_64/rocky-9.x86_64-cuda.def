%files
    /etc/passwd /etc
    /etc/shadow /etc
    /etc/group /etc
    /etc/gshadow /etc

%post
    # Variables
    export KERNEL_VER=5.14.0-284.11.1
    export KERNEL_OS=el9_2
    export ARCH=x86_64
    export KVERSION=${KERNEL_VER}.${KERNEL_OS}.${ARCH}

    # CUDA
    wget -O /etc/yum.repos.d/cuda-rhel9.repo https://developer.download.nvidia.com/compute/cuda/repos/rhel9/${ARCH}/cuda-rhel9.repo
    dnf -y --nobest update
    dnf -y install \
           cuda-drivers \
           dkms \
           nvidia-kmod-headers

    # Build CUDA Driver
    dkms autoinstall -k ${KVERSION}
    rm -rf /var/lib/dkms/nvidia

%post
    # Yum
    dnf clean all
    rm -rf /var/lib/yum/yumdb/*

    # Misc
    rm -f /etc/passwd /etc/passwd- /etc/shadow /etc/shadow- /etc/group /etc/group- /etc/gshadow /etc/gshadow-
