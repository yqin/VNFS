%files
    /etc/passwd /etc
    /etc/shadow /etc
    /etc/group /etc
    /etc/gshadow /etc

%post
    # Variables
    export MOFED_VER=23.04-1.1.3.0
    export OS=rhel9.2
    export KERNEL_VER=5.14.0-284.11.1
    export KERNEL_OS=el9_2
    export KERNEL_ARCH=aarch64
    export KVERSION=${KERNEL_VER}.${KERNEL_OS}.${KERNEL_ARCH}

    # Dependencies
    dnf -y install \
           perl-sigtrap

    # Mellanox OFED for the specific kernel
    cd /tmp
    cat > ofed.conf << EOF
prefix=/usr
mlnx-ofa_kernel=y
mlnx-ofa_kernel-devel=y
mlnx-ofa_kernel-source=n
kernel-mft-mlnx=y
knem=y
xpmem=y
xpmem-modules=y
libxpmem=y
iser=n
srp=n
isert=n
libibverbs=y
rdma-core-devel=y
libibverbs-utils=y
libibumad=y
ibsim=y
ibacm=y
librdmacm=y
librdmacm-utils=y
opensm=y
opensm-libs=y
opensm-devel=y
opensm-static=y
perftest=y
mstflint=y
mft=y
srp_daemon=n
ibutils2=y
dump_pr=y
ibdump=y
infiniband-diags=y
dpcp=y
ucx=n
ucx-devel=n
sharp=n
ucx-cma=n
ucx-ib=n
ucx-rdmacm=n
ucx-knem=n
ucx-xpmem=n
mpi-selector=n
openmpi=n
hcoll=n
mlnx-ethtool=y
mlnx-iproute2=y
rshim=y
ibarr=y
mlnxofed-docs=y
ofed-scripts=y
mlnx-tools=y
mpitests_openmpi=n
EOF

    wget -c https://content.mellanox.com/ofed/MLNX_OFED-${MOFED_VER}/MLNX_OFED_LINUX-${MOFED_VER}-${OS}-${KERNEL_ARCH}.tgz
    tar zxvpf MLNX_OFED_LINUX-${MOFED_VER}-${OS}-${KERNEL_ARCH}.tgz
    cd MLNX_OFED_LINUX-${MOFED_VER}-${OS}-${KERNEL_ARCH}
    ./mlnxofedinstall --distro ${OS} --kernel ${KVERSION} --add-kernel-support --without-fw-update --config /tmp/ofed.conf --force
    systemctl disable rshim.service

%post
    # Yum
    dnf clean all
    rm -rf /var/lib/yum/yumdb/*

    # Misc
    rm -f /etc/passwd /etc/passwd- /etc/shadow /etc/shadow- /etc/group /etc/group- /etc/gshadow /etc/gshadow-
