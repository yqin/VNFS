%files
    /etc/passwd /etc
    /etc/shadow /etc
    /etc/group /etc
    /etc/gshadow /etc

%post
    # Variables
    export MOFED_VER=4.7-1.0.0.1
    export OS=rhel7.7
    export KERNEL_VER=3.10.0-1062.4.1
    export KERNEL_OS=el7
    export KERNEL_ARCH=x86_64
    export KVERSION=${KERNEL_VER}.${KERNEL_OS}.${KERNEL_ARCH}

    # Mellanox OFED for the specific kernel
    cd /tmp
    cat > ofed.conf << EOF
mlnx-ofa_kernel=y
mlnx-ofa_kernel-devel=y
knem=y
kernel-mft-mlnx=y
iser=n
srp=n
isert=n
mlnx-nvme=n
rshim=y
libibverbs=y
libibverbs-devel=y
libibverbs-devel-static=y
libibverbs-utils=y
libmlx4=y
libmlx4-devel=y
libmlx5=y
libmlx5-devel=y
librxe=y
librxe-devel-static=y
libibcm=y
libibcm-devel=y
libibumad=y
libibumad-devel=y
libibumad-static=y
libibmad=y
libibmad-devel=y
libibmad-static=y
ibsim=y
ibacm=y
librdmacm=y
librdmacm-utils=y
librdmacm-devel=y
opensm=y
opensm-libs=y
opensm-devel=y
opensm-static=y
dapl=y
dapl-devel=y
dapl-devel-static=y
dapl-utils=y
perftest=y
mstflint=y
mft=y
srptools=n
ibutils=y
infiniband-diags=y
infiniband-diags-compat=y
qperf=n
ofed-scripts=y
ucx=n
ucx-devel=n
ucx-cma=n
ucx-ib=n
ucx-ib-cm=n
ucx-rdmacm=n
ucx-knem=n
mpi-selector=n
openmpi=n
mlnx-ethtool=y
mlnx-iproute2=y
mpitests_openmpi=n
EOF
    wget -c http://www.mellanox.com/downloads/ofed/MLNX_OFED-${MOFED_VER}/MLNX_OFED_LINUX-${MOFED_VER}-${OS}-${KERNEL_ARCH}.tgz
    tar zxvpf MLNX_OFED_LINUX-${MOFED_VER}-${OS}-${KERNEL_ARCH}.tgz
    cd MLNX_OFED_LINUX-${MOFED_VER}-${OS}-${KERNEL_ARCH}
    ./mlnxofedinstall --kernel ${KVERSION} --add-kernel-support --without-fw-update --config /tmp/ofed.conf --force
    ## Fix kernel modules location
    yum remove -y kmod-mlnx-ofa_kernel kmod-kernel-mft-mlnx kmod-knem kmod-rshim
    export MOFED_INS_DIR=/tmp/MLNX_OFED_LINUX-${MOFED_VER}-${KVERSION}/MLNX_OFED_LINUX-${MOFED_VER}-${OS}-ext/RPMS/COMMON
    yum -ty install \
        ${MOFED_INS_DIR}/kernel-mft-4.13.0-102.kver.3.10.0_1062.4.1.el7.x86_64.x86_64.rpm \
        ${MOFED_INS_DIR}/knem-modules-1.1.3.90mlnx1-OFED.4.6.2.0.8.1.g8d875ee.kver.3.10.0_1062.4.1.el7.x86_64.x86_64.rpm \
        ${MOFED_INS_DIR}/mlnx-ofa_kernel-modules-4.7-OFED.4.7.1.0.0.1.g1c4bf42.kver.3.10.0_1062.4.1.el7.x86_64.x86_64.rpm \
        ${MOFED_INS_DIR}/rshim-1.8-0.g463f780.kver.3.10.0_1062.4.1.el7.x86_64.x86_64.rpm

%post
    # Yum
    yum clean all
    rm -rf /var/lib/yum/yumdb/*

    # Misc
    rm -f /etc/passwd /etc/passwd- /etc/shadow /etc/shadow- /etc/group /etc/group- /etc/gshadow /etc/gshadow-
