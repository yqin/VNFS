BootStrap: yum
OSVersion: 7
MirrorURL: http://mirror.enzu.com/centos/%{OSVERSION}/os/$basearch/
Include: yum


%files
    /etc/passwd /etc
    /etc/shadow /etc
    /etc/group /etc
    /etc/gshadow /etc

%post
    yum -ty install \
            epel-release
    yum -y  update
    yum -ty install \
            chrony \
            createrepo \
            cronie \
            crontabs \
            e2fsprogs \
            ethtool \
            gzip \
            hwloc \
            initscripts \
            iproute \
            iputils \
            irqbalance \
            less \
            libcgroup-pam \
            net-tools \
            nfs-utils \
            numactl \
            openssh \
            openssh-clients \
            openssh-server \
            pam \
            parted \
            pciutils \
            psmisc \
            rdate \
            rsync \
            rsyslog \
            selinux-policy-targeted \
            shadow-utils \
            strace \
            sudo \
            tar \
            tcp_wrappers \
            util-linux \
            vim-minimal \
            wget \
            which \
            words \
            yum-plugin-versionlock \
            yum-utils

%post
    # Fix ping
    chmod 4755 /usr/bin/ping

    # Fix /tmp, /var/tmp
    chmod 1777 /tmp /var/tmp

    # Root ssh
    mkdir -p /root/.ssh
    chown root:root /root/.ssh
    chmod 700 /root/.ssh

    # Mount points
    mkdir -p /global/home /global/home/groups /global/home/users /global/scratch /global/software /global/archive /local
    chown root:root /global/home /global/home/groups /global/home/users /global/scratch /global/software /global/archive /local
    chmod 755 /global/home /global/home/groups /global/home/users /global/scratch /global/software /global/archive /local

    # Yum
    yum clean all
    rm -rf /var/lib/yum/yumdb/*

    # Misc
    rm -f /etc/passwd /etc/passwd- /etc/shadow /etc/shadow- /etc/group /etc/group- /etc/gshadow /etc/gshadow-
