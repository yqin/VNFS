%files
    /etc/warewulf/ubuntu-18.04/passwd /etc
    /etc/warewulf/ubuntu-18.04/shadow /etc
    /etc/warewulf/ubuntu-18.04/group /etc
    /etc/warewulf/ubuntu-18.04/gshadow /etc

%post
    apt-get -y install \
            autoconf \
            automake \
            bc \
            debhelper \
            binutils \
            binutils-dev \
            bison \
            build-essential \
            bzip2 \
            emacs \
            environment-modules \
            flex \
            gcc \
            g++ \
            gfortran \
            git \
            graphviz \
            ipmitool \
            lftp \
            libhwloc-dev \
            libltdl-dev \
            libcgroup-dev \
            libpam0g \
            libpam0g-dev \
            libpam-cgroup \
            libnuma-dev \
            make \
            manpages \
            netplan \
            pkg-config \
            python-libxml2 \
            screen \
            subversion \
            sudo \
            tcl \
            tk \
            tmux \
            vim \
            zlib1g-dev

%post
    # APT
    apt-get -y clean

    # Misc
    rm -f /etc/passwd /etc/passwd- /etc/shadow /etc/shadow- /etc/group /etc/group- /etc/gshadow /etc/gshadow-
