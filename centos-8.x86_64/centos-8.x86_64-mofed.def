%files
    /etc/passwd /etc
    /etc/shadow /etc
    /etc/group /etc
    /etc/gshadow /etc

%post
    # Variables
    export MOFED_VER=4.7-3.2.9.0
    export OS=rhel8.0
    export KERNEL_VER=4.18.0-80.11.2
    export KERNEL_OS=el8
    export KERNEL_ARCH=x86_64
    export KVERSION=${KERNEL_VER}.${KERNEL_OS}_0.${KERNEL_ARCH}

    # Dependencies
    dnf -y install \
           kernel-rpm-macros \
           python36 \
           python36-devel

    # Mellanox OFED for the specific kernel
    cd /tmp
    cat > ofed.conf << EOF
mlnx-ofa_kernel=y
mlnx-ofa_kernel-devel=y
knem=y
kernel-mft-mlnx=y
iser=n
srp=n
isert=n
mlnx-nvme=n
rshim=y
libibverbs=y
libibverbs-devel=y
libibverbs-devel-static=y
libibverbs-utils=y
libmlx4=y
libmlx4-devel=y
libmlx5=y
libmlx5-devel=y
librxe=y
librxe-devel-static=y
libibcm=y
libibcm-devel=y
libibumad=y
libibumad-devel=y
libibumad-static=y
libibmad=y
libibmad-devel=y
libibmad-static=y
ibsim=y
ibacm=y
librdmacm=y
librdmacm-utils=y
librdmacm-devel=y
opensm=y
opensm-libs=y
opensm-devel=y
opensm-static=y
dapl=y
dapl-devel=y
dapl-devel-static=y
dapl-utils=y
perftest=y
mstflint=y
mft=y
srptools=n
ibutils=n
ibutils2=y
infiniband-diags=y
infiniband-diags-compat=y
qperf=n
ofed-scripts=y
ucx=n
ucx-devel=n
ucx-cma=n
ucx-ib=n
ucx-ib-cm=n
ucx-rdmacm=n
ucx-knem=n
mpi-selector=n
openmpi=n
mlnx-ethtool=y
mlnx-iproute2=y
mpitests_openmpi=n
EOF
    wget -c http://www.mellanox.com/downloads/ofed/MLNX_OFED-${MOFED_VER}/MLNX_OFED_LINUX-${MOFED_VER}-${OS}-${KERNEL_ARCH}.tgz
    tar zxvpf MLNX_OFED_LINUX-${MOFED_VER}-${OS}-${KERNEL_ARCH}.tgz
    cd MLNX_OFED_LINUX-${MOFED_VER}-${OS}-${KERNEL_ARCH}
    ./mlnxofedinstall --distro rhel8.0 --kernel ${KVERSION} --add-kernel-support --without-fw-update --config /tmp/ofed.conf --force

%post
    # Yum
    dnf clean all
    rm -rf /var/lib/yum/yumdb/*

    # Misc
    rm -f /etc/passwd /etc/passwd- /etc/shadow /etc/shadow- /etc/group /etc/group- /etc/gshadow /etc/gshadow-
